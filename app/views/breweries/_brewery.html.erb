<div id="<%= dom_id brewery %>">

  <h2><%= brewery.name %></h2>

  <p><i>Established in <%= brewery.year %></i></p>

  <p>Beers count: <%= brewery.beers.count %></p>

  <p>
    <% brewery.beers.each do |beer| %>
      <li><%= link_to beer.name, beer %></li>
    <% end %>
  </p>

  <p>
    <% if brewery.ratings.empty? %>
      Brewery has no ratings
    <% else %>
      Brewery has <%= pluralize(brewery.ratings.count, "rating") %> with an average of <%= brewery.ratings.average(:score).round(1) %>
    <% end %>
  </p>

</div>
