<p style="color: green"><%= notice %></p>

<div id="<%= dom_id @user %>">
  <h2>Username:</h2>

  <p><%= @user.username %></p>
  <p>Has made <%= pluralize(@user.ratings.count, "rating") %>, average rating <%= @user.ratings.average(:score).round(1) %></p>

  <p><strong>ratings</strong></p>

  <p>
    <% @user.ratings.each do |rating| %>
      <li> <%= rating.beer.name %> <%= rating.score %> <%= link_to 'Delete', "/ratings/" + rating.id.to_s,
      data: {
        "turbo-method": :delete,
        "turbo-confirm": "Are you sure?"
      } %> </li>
    <% end %>
  </p>
</div>

<div>
  <%= link_to "Edit this user", edit_user_path(@user) %> |
  <%= link_to "Back to users", users_path %>

  <%= button_to "Destroy this user", @user, method: :delete %>
</div>
