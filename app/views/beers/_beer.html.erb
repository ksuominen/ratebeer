<div id="<%= dom_id beer %>">
  <p>
    <strong>Name:</strong>
    <%= beer.name %>
  </p>

  <p>
    <strong>Style:</strong>
    <%= beer.style %>
  </p>

  <p>
    <strong>Brewery:</strong>
    <%= beer.brewery.name %>
  </p>

  <p>
    <% if beer.ratings.empty? %>
      Beer has not yet been rated!
    <% else %>
      Beer has <%= pluralize(beer.ratings.count, "rating") %> with an average of <%= beer.ratings.average(:score).round(1) %>
    <% end %>
  </p>

</div>
